    <li>
      <img src={Astro.resolve('/public/assets/javascript.svg')} alt="javascript" />
      <h3>Javascript</h3>
    </li>
    <li>
      <img src={Astro.resolve('/public/assets/react.svg')} alt="react" />
      <h3>ReactJS</h3>
    </li>
    <li>
      <img src={Astro.resolve('/public/assets/git.svg')} alt="git" />
      <h3>Git</h3>
    </li>
    <li>
      <img src={Astro.resolve('/public/assets/github.svg')} alt="github" />
      <h3>GitHub</h3>
    </li>
  </ul>
</section>